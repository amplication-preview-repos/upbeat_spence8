datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Utilisateur {
  createdAt        DateTime  @default(now())
  dateDeCreation   DateTime?
  derniReConnexion DateTime?
  email            String?
  id               String    @id @default(cuid())
  motDePasse       String?
  nom              String?
  prNom            String?
  updatedAt        DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
