datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recherche {
  adresseId        String?
  createdAt        DateTime    @default(now())
  dateDeRecherche  DateTime?
  id               String      @id @default(cuid())
  itinRaires       ItinRaire[]
  termeDeRecherche String?
  updatedAt        DateTime    @updatedAt
  utilisateurId    String?
}

model ItinRaire {
  createdAt      DateTime   @default(now())
  id             String     @id @default(cuid())
  pointsDeRepere String?
  recherche      Recherche? @relation(fields: [rechercheId], references: [id])
  rechercheId    String?
  updatedAt      DateTime   @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
